                    inventore tenetur aliquid hic, temporibus rem ratione! Explicabo, neque labore?</p>
            </div>

            <form class="forma">
                <h2>POSTANI DEO VREMEPLOVA</h2>
                <input type="text" placeholder="Ime" required>
                <input type="text" placeholder="Prezime" required>
                <input type="email" placeholder="primer@gmail.com" required>
                <input type="submit" value="posalji">
            </form>

            <div class="tim" id="tim">
                <ion-icon name="people-outline">Vremeplov Tim</ion-icon>
                <h2>Vremeplov Tim</h2>
                <% if(User !='' ) { %>
                    <% User.forEach(function(User, index){%>
                        <div class="tim-clan"><span class="ime">
                                <%= User.username %>
                                    <%= User.lastname %>
                            </span><span class="status">
                                <%= User.role %>
                            </span>
                        </div>
                        <% })%>
                            <% }%>

            </div>



        </div>
    </main>
</body>

<script>
    const submenuTim = document.querySelector('.tim-clan')
    const navToggleTim = document.getElementById('tim')

    navToggleTim.addEventListener("click", () => {
        navToggleTim.classList.toggle('active')
    })
</script>

</html>